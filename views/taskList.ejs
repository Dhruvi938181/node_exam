<!DOCTYPE html>
<html>
<head>
    <title>Category List</title>
</head>
<body>

<h1>Categories</h1>

<form action="/category" method="post">
    <input type="text" name="category" placeholder="Enter category" required>
    <input type="text" name="discription" placeholder="Enter discription" required>
    <input type="submit" value="Add Category">
</form>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% data.forEach(cat => { %>
            <tr>
                <td><%= cat.category %></td>
                <td><%= cat.discription %></td>
                <td>
                    <a href="/category/edit/<%=cat._id%>">Edit</a>
                    <a href="/category/delete/<%=cat._id%>">Delete</a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

</body>
</html>
